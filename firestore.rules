rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Any authenticated user can read (for admin dashboard)
      allow read: if isAuthenticated();
      
      // Users can create their own account
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Users can update their own data
      allow update: if isOwner(userId);
      
      // Any authenticated user can delete (for admin)
      allow delete: if isAuthenticated();
    }
    
    // Stores collection
    match /stores/{storeId} {
      // Anyone (authenticated) can read stores
      allow read: if isAuthenticated();
      
      // Authenticated users can create stores
      allow create: if isAuthenticated()
        && request.resource.data.keys().hasAll(['storeId', 'name', 'location', 'addedBy', 'createdAt'])
        && request.resource.data.addedBy == request.auth.uid;
      
      // Store creator can update
      allow update: if isAuthenticated() && resource.data.addedBy == request.auth.uid;
      
      // Any authenticated user can delete (for admin)
      allow delete: if isAuthenticated();
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone (authenticated) can read products
      allow read: if isAuthenticated();
      
      // Authenticated users can create products
      allow create: if isAuthenticated()
        && request.resource.data.keys().hasAll([
          'productId', 'name', 'originalName', 'price', 
          'storeId', 'storeName', 'storeLocation', 'receiptId', 
          'uploadedBy', 'createdAt'
        ])
        && request.resource.data.uploadedBy == request.auth.uid
        && request.resource.data.price is number
        && request.resource.data.price > 0;
      
      // Product uploader can update
      allow update: if isAuthenticated() && resource.data.uploadedBy == request.auth.uid;
      
      // Product uploader can delete
      allow delete: if isAuthenticated() && resource.data.uploadedBy == request.auth.uid;
    }
    
    // Receipts collection
    match /receipts/{receiptId} {
      // Any authenticated user can read (for admin)
      allow read: if isAuthenticated();
      
      // Authenticated users can create receipts
      allow create: if isAuthenticated()
        && request.resource.data.keys().hasAll([
          'receiptId', 'imageUrl', 'storeName', 'storeLocation',
          'uploadedBy', 'processedAt', 'ocrText', 'productCount'
        ])
        && request.resource.data.uploadedBy == request.auth.uid;
      
      // No updates allowed
      allow update: if false;
      
      // Any authenticated user can delete (for admin)
      allow delete: if isAuthenticated();
    }
    
    // Search logs collection
    match /searchLogs/{searchId} {
      // Any authenticated user can read (for admin)
      allow read: if isAuthenticated();
      
      // Authenticated users can create search logs
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;
      
      // No updates, but allow delete for admin
      allow update: if false;
      allow delete: if isAuthenticated();
    }
  }
}

